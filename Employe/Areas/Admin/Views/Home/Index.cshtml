@using Employe.Models;
@model IEnumerable<Order>

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">

            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                         <h4 class="card-title">Orders Table</h4>
                        <p class="card-description">
                            <a asp-area="Admin" asp-controller="Home" asp-action="Create" class="btn btn-success">Create</a>
                        </p> 
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                           #
                                        </th>
                                        <th>
                                            Service Img
                                        </th>
                                        <th>
                                            ClientName
                                        </th>
                                        <th>
                                            ClientSurname
                                        </th>
                                        <th>
                                            ClientPhoneNumber
                                        </th>
                                        <th>
                                            ClientEmail
                                        </th>
                                        <th>
                                            ServiceId
                                            </th>
                                        <th>
                                            MasterId
                                            </th>
                                        <th>
                                            Problem
                                        </th>

                                        
                                        <th>
                                            CreatedAt
                                        </th>
                                        <th>
                                            UpdatedAt
                                        </th>
                                        <th>
                                           Update

                                        </th>
                                        <th>
                                            Soft Delete

                                        </th>
                                        
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach(var item in Model)
                                    {
                                        

                                    <tr>
                                        <td>
                                            @item.Id
                                        </td>
                                        <td>
                                                <img src="~/ImageUpload/@item.ImgPath" />
                                            
                                                

                                        </td>
                                        <td>
                                                @item.ClientName

                                        </td>
                                        <td>
                                                @item.ClientSurname

                                        </td>
                                        <td>
                                                @item.ClientPhoneNumber

                                        </td>
                                        <td>
                                                @item.ClientEmail

                                        </td>
                                        <td>
                                                @item.ServiceId

                                        </td>
                                        <td>
                                                @item.MasterId

                                        </td>
                                        <td>
                                                @item.Problem

                                        </td>
                                       
                                        <td>
                                                @item.CreatedAt

                                        </td>
                                        <td>
                                                @item.UpdatedAt

                                        </td>
                                        <td>
                                                <a class="btn btn-success" asp-area="Admin" asp-controller="Home" asp-action="Update" asp-route-id="@item.Id"> Update </a>
                                        </td>
                                            <td>
                                                <a class="btn btn-danger" asp-area="Admin" asp-controller="Home" asp-action="SOftDelete" asp-route-id="@item.Id">Soft Delete </a>
                                            </td>
                                    </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- content-wrapper ends -->
    <!-- partial:../../partials/_footer.html -->
    <footer class="footer">
        <div class="d-sm-flex justify-content-center justify-content-sm-between">
            <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">Copyright © bootstrapdash.com 2020</span>
            <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center"> Free <a href="https://www.bootstrapdash.com/" target="_blank">Bootstrap dashboard template</a> from Bootstrapdash.com</span>
        </div>
    </footer>
    <!-- partial -->
</div>