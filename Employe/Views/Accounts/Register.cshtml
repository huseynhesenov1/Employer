@using Employe.DTOs.UserDTOs;
@model CreateUserDto;

<body class="bg-gradient-primary">

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div style="display: flex; justify-content:center; align-items:center" class="row">

                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                            </div>
                            <form class="user" method="post">
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0 mt-3">
                                        <input class="form-control form-control-user" asp-for="FirstName" />
                                        @* <span asp-validation-for="FirstName" class="text-danger"></span> *@

                                    </div>
                                    <div class="col-sm-6 mt-3">
                                        <input class="form-control form-control-user" asp-for="LastName">
                                        @* <span asp-validation-for="LastName" class="text-danger"></span> *@


                                    </div>
                                </div>
                                <div class="form-group mt-3">
                                    <input class="form-control form-control-user" asp-for="Email" />
                                    @* <span asp-validation-for="Email" class="text-danger"></span> *@

                                </div>
                                <div class="form-group mt-3">
                                    <input class="form-control form-control-user" asp-for="UserName" />
                                    @* <span asp-validation-for="Username" class="text-danger"></span> *@

                                </div>

                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0 mt-3">
                                        <input class="form-control form-control-user" asp-for="Password">
                                        @* <span asp-validation-for="Password" class="text-danger"></span> *@

                                    </div>
                                    <div class="col-sm-6 mt-3">
                                        <input class="form-control form-control-user" asp-for="ConfirmPassword">
                                        @* <span asp-validation-for="ConfirmPassword" class="text-danger"></span> *@

                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <p class="text-danger">
                                            @Html.ValidationSummary()
                                        </p>
                                    </div>
                                </div>
                                <button class="btn btn-primary btn-user btn-block mt-3" type="submit">
                                    Register Account
                                </button>
                                <hr>

                            </form>
                            <hr>
                            <div class="text-center">
                                <a class="small" href="forgot-password.html">Forgot Password?</a>
                            </div>
                            <div class="text-center">
                                <a class="small" asp-action="Login">Already have an account? Login!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin-2.min.js"></script>

</body>

